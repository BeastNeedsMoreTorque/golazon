#!/usr/bin/env node

'use strict';

const fs = require('fs');
const hash = require('string-hash');
const replace = require('replace-in-file');

const publicDir = __dirname + '/../public/';

// const assets = ['app.css', 'app.js', 'vendors.js'];
const assets = ['app.js', 'vendors.js'];

assets.forEach(function(file) {
  let fileContent = fs.readFileSync(publicDir + file, 'utf-8');
  let newFile = file.replace('.', '.' + hash(fileContent).toString(36) + '.');

  fs.rename(publicDir + file, publicDir + newFile);

  let changedFiles = replace.sync({
    files: [
      publicDir + '*.html',
      publicDir + '*.css',
      publicDir + '*.js',
    ],
    replace: file,
    with: newFile,
  });

  console.log(file + ' => ' + newFile);
  console.log('modified in ', changedFiles.join(', '));
  console.log('---')
});
